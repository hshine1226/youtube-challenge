extends layouts/main

block content 
  form(action=`/${movie._id}/edit`, method="post")
    input(type="text", name="title", placeholder="", required, value=movie.title)
    input(type="text", name="year", placeholder="Year", required, value=movie.year)
    input(type="text", name="rating", placeholder="Rating", required, value=movie.rating)
    textarea(name="synopsis", cols="30", rows="3", placeholder="Synopsis", required) #{movie.synopsis}
    input(type="text", name="genres", placeholder="Genres", required, value=movie.genres[0])
    button(type="submit") Submit
  
  form(action=`/${movie._id}/delete`, method="post")
    input(type="submit", value="Delete Movie!")